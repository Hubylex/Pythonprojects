def factorial(n):
    a = 1
    for i in range(1,n+1):
        a *= i
    return a

def combination(n,r):
    return int(factorial(n)/(factorial(n-r)*factorial(r)))
    
def binomial(a,b,n):
    s = 0
    summ = []
    for r in range(n+1):
        s = combination(n,r)*(a**(n-r))*(b**r)
        summ.append(s)
    return f'Terms are {summ}\nThe sum is {sum(summ)}'
     
print(binomial(2,2,2))



